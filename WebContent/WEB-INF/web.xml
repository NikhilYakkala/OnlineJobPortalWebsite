<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.login.Login</servlet-class>
</servlet>
  
  <servlet>
  <servlet-name>AdminRegistration</servlet-name>
  <servlet-class>com.admin.AdminRegistration</servlet-class>
  </servlet>
  
    <servlet>
  <servlet-name>RecuriterRegistration</servlet-name>
  <servlet-class>com.recuriter.RecuriterRegistration</servlet-class>
  </servlet>
  
  
  <servlet>
  <servlet-name>UserRegistration</servlet-name>
  <servlet-class>com.user.UserRegistration</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>Login</servlet-name>
  <url-pattern>/loginValidation</url-pattern>
  </servlet-mapping>
  
  
  <servlet-mapping>
  <servlet-name>AdminRegistration</servlet-name>
  <url-pattern>/AdminRegistration</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  <servlet-name>RecuriterRegistration</servlet-name>
  <url-pattern>/RecuriterRegistration</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
  <servlet-name>UserRegistration</servlet-name>
  <url-pattern>/UserRegistration</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
  
</web-app>